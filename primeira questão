#include <stdio.h>
#include <stdlib.h>

int main() {
    int num, soma = 0;

    printf("Digite os números a serem somados:\n");
    printf("Caso queira sair, digite 0.\n");

    while (1) {
        scanf("%d", &num);  
        
        if (num == 0) {
            break;  
        }

        soma = soma + num;  
    }

    printf("A soma dos números digitados é: %d\n", soma);
    
    system("pause");
    return 0;
}
