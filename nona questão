#include <stdio.h>
#include <stdlib.h>

int main() {
    float chico = 1.70, juca = 1.10;
    int anos = 0;
    
    while (juca <= chico) {
        chico = chico + 0.02;
        juca = juca + 0.03;
        anos = anos + 1;
    }
    
    printf("Serão necessários %d anos para que Juca seja maior que Chico.\n", anos);
    
    system("pause");
    return 0;
}
